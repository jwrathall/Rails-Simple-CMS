<%
text = "This is a long text example for my fun site. It includes
line breaks \n and double line breaks \n\n It kind of carries on like this.\n\n You
can't email me at suckitloser@email.com."
%>

<h2>word_wrap</h2>
<%= word_wrap(text, :line_width => 30)%>
<hr/>

<h2>simple_format</h2>
<%= simple_format(text)%>
<hr/>

<h2>simple_format + word_wrap</h2>
<%= simple_format(word_wrap(text, :line_width => 30))%>
<hr/>

<h2>truncate</h2>
<%= truncate(text, :length => 40, :omission => "...")%>
<hr/>

<h2>exerpt</h2>
<%= excerpt(text, 'includes', :radius => 7, :omission => "...")%>
<hr/>

<h2>highlight</h2>
<%= highlight(text, 'example')%>
<hr/>
<%= highlight(text, ['example','carries'], :highlighter =>'<em>\1</em>')%>
<hr/>

<h2>pluralize</h2>
<%="ox".pluralize%>
<%(1..3).each do |n|%>
	<%= pluralize(n, 'octopus')%>
	<%= pluralize(n, 'snipe','snope')%>
<%end%>
<hr/>

<h2>cycle</h2>
<%5.times do%>
	<%= cycle('red','green','blue')%>
<%end%>
<hr/>