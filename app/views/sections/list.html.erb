<%@page_title = "Section List"%>
<div class="subject list">
	<h2>Subjects</h2>
	<div>
		<%=link_to("Add new item",:action => 'new',:class =>'action-new')%>
	</div>
	<table class="listing" summary="Section list">
		<tr class="header">
			<th>&nbsp;</th>
			<th>Subject</th>
			<th>Visible</th>
			<th>Content Type</th>
			<th>Actions</th>
		</tr>
		<% @sections.each do |section| %>
		<tr>
	    	<td><%= section.position%></td>
	    	<td><%= section.name%></td>
	    	<td class="center"><%= section.is_visible ? 'Yes' : 'No'%></td>
	    	<td class="center"><%= section.content_type%></td>
	    	<td class="actions">
	    		<%= link_to("Show",{:action => 'show', :id => section.id}, :class => 'action show')%>
	    		<%= link_to("Edit", {:action => 'edit', :id => section.id}, :class => 'action edit')%>
	    		<%= link_to("Delete", {:action => 'delete', :id => section.id}, :class => 'action delete')%>
	    	</td>
	    </tr>
	    <%end%>
	</table>
</div>