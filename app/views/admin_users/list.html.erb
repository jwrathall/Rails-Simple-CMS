<%@page_title = "Admin Users List"%>
<div class="users list">
	<h2>Admin Users</h2>
	<div>
		<%=link_to("Add new item",:action => 'new',:class =>'action-new')%>
	</div>
	<div><%= pluralize(@users.size, 'User')%> found</div>
	<table class="listing" summary="Admin Users list">
		<tr class="header">
			<th>Name</th>
			<th>Username</th>
			<th>email</th>
			<th>Actions</th>
		</tr>
		<% @users.each do |user| %>
		<tr class="<%= cycle('odd','even')%>"> 
	    	<td><%= user.fullname%></td>
	    	<td><%= user.username%></td>
	    	<td class="center"><%= mail_to user.email%></td>>
	    	<td class="actions">
	    		<%= link_to("Edit", {:action => 'edit', :id => user.id}, :class => 'action edit')%>
	    		<%= link_to("Delete", {:action => 'delete', :id => user.id}, :class => 'action delete')%>
	    	</td>
	    </tr>
	    <%end%>
	</table>
</div>