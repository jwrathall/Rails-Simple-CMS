<%@page_title = "Page List"%>
<%= link_to("<< Back to Subject", {:controller => 'subjects', :action => 'list'}, :class => 'back-link') %>

<div class="page list">
	<h2>Pages</h2>
	<div>
		<%=link_to("Add new item",{:action => 'new', :subject_id => @subject.id},:class =>'action-new')%>
	</div>
	<table class="listing" summary="Page list">
		<tr class="header">
			<th>&nbsp;</th>
			<th>Page</th>
			<th>Visible</th>
			<th>Permalink</th>
			<th>Actions</th>
		</tr>
		<% @pages.each do |page| %>
		<tr>
	    	<td><%= page.position%></td>
	    	<td><%= page.name%></td>
	    	<td class="center"><%= status_tag(page.is_visible)%></td>
	    	<td class="center"><%= page.permalink%></td>
	    	<td class="actions">
	    		<%= link_to("Show",{:action => 'show', :id => page.id, :subject_id => @subject.id}, :class => 'action show')%>
	    		<%= link_to("Edit", {:action => 'edit', :id => page.id, :subject_id => @subject.id}, :class => 'action edit')%>
	    		<%= link_to("Delete", {:action => 'delete', :id => page.id, :subject_id => @subject.id}, :class => 'action delete')%>
	    	</td>
	    </tr>
	    <%end%>
	</table>
</div>