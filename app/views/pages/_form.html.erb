	<%= error_messages_for(@page)%>
	<table summary="Page form fields">
       <tr>
        <th><%=f.label(:subject_id, "Subject Id")%></th>
        <td><%= f.select(:subject_id, @sections.all.collect{|s| [s.name,s.id]}) %></td>
      </tr>
      <tr>
        <th><%=f.label(:name)%></th>
        <td><%= f.text_field(:name) %></td>
      </tr>
      <tr>
        <th><%=f.label(:position)%></th>
        <td><%= f.select(:position, 1..@page_count) %></td>
      </tr>
      <tr>
        <th><%=f.label(:is_visible, "Visible")%></th>
        <td><%= f.check_box(:is_visible) %></td>
      </tr>
      <tr>
        <th><%=f.label(:permalink, "Permalink")%></th>
        <td><%= f.text_field(:permalink) %></td>
      </tr>
    </table>